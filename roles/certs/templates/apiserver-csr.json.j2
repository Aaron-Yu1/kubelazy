{
  "CN": "kubernetes",
  "hosts": [
    "127.0.0.1",
{% if groups['ha']|length > 0 %}
    "{{ VIP_ADDRESS }}",
{% endif %}
{% for host in CLUSTER_HOSTS %}
    "{{ host }}",
{% endfor %}
{% for host in groups['master'] %}
    "{{ host }}",
{% endfor %}
    "{{ CLUSTER_KUBERNETES_SVC_IP }}",
    "kubernetes",
    "kubernetes.default",
    "kubernetes.default.svc",
    "kubernetes.default.svc.cluster",
    "kubernetes.default.svc.cluster.local"
  ],
  "key": {
    "algo": "rsa",
    "size": 2048
  },
  "names": [
    {
      "C": "CN",
      "ST": "JS",
      "L": "SZ",
      "O": "k8s",
      "OU": "System"
    }
  ]
}
